package hackerRank;




import java.util.*;
import java.io.*;

public class Loops2{
    public static void main(String []argh){
        Scanner in = new Scanner(System.in);
        int t=in.nextInt();
        for(int i=0;i<t;i++){
            int a = in.nextInt();
            int b = in.nextInt();
            int n = in.nextInt();
            
            int[] arr[];
            
            int x = a+b;
            
            arr[0]=x;
            
            for(int j=1;j<=n;j++) {
            	arr[j] = arr[j-1]+ b*(int)Math.pow((2, j);
            	
            	System.out.print(arr[j]+" ");
            }
            
            System.out.println();
            
            
            
        }
        in.close();
    }
}